<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:layout_width="match_parent">
<fragment
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dominika.naszsamochod.MapsActivity"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">



</fragment>

    <ImageButton
        android:id="@+id/current"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="wspolrzedne"
        android:background="@drawable/dist"
        android:layout_marginEnd="13dp"
        android:layout_alignTop="@+id/getdistanse"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/pause"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/start"
        android:layout_toStartOf="@+id/resume" />

    <ImageButton
        android:id="@+id/resume"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/resume"
        android:layout_alignTop="@+id/pause"
        android:layout_toStartOf="@+id/getdistanse"
        android:layout_marginEnd="28dp" />

    <ImageButton
        android:id="@+id/getdistanse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/dist2"
        android:layout_alignTop="@+id/pause"
        android:layout_toStartOf="@+id/current"
        android:layout_marginEnd="17dp" />


    <TextView
        android:id="@+id/co_ordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIME:"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <ImageButton
        android:id="@+id/start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/start"
        android:text="start"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/pause" />

</RelativeLayout>

